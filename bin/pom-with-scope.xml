<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>org.example</groupId>
  <artifactId>pddl_gen</artifactId>
  <version>1.0-SNAPSHOT</version>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <main.class>Runner</main.class>
    <maven.compiler.source>17</maven.compiler.source>
    <maven.compiler.target>17</maven.compiler.target>
  </properties>

  <dependencies>
    <dependency>
        <groupId>com.github.pellierd</groupId>
        <artifactId>pddl4j</artifactId>
        <version>3.8.3</version>
    </dependency>
    <dependency>
        <groupId>javax.xml.bind</groupId>
        <artifactId>jaxb-api</artifactId>
        <version>2.3.1</version>
    </dependency>
    <dependency>
        <groupId>de.uni.freiburg.iig.telematik</groupId>
        <artifactId>SEWOL</artifactId>
        <version>1.0.2</version>
    </dependency>
    <dependency>
        <groupId>org.processmining</groupId>
        <artifactId>ltl2automaton</artifactId>
        <version>1.0.0</version>
        <scope>system</scope>
        <systemPath>${project.basedir}/src/main/resources/lib/LTL2Automaton.jar</systemPath>
    </dependency>
    <dependency>
        <groupId>com.github.vbmacher</groupId>
        <artifactId>java-cup</artifactId>
        <version>11b</version>
    </dependency>
    <dependency>
        <groupId>org.processmining</groupId>
        <artifactId>datapetrinets</artifactId>
        <version>1.0.0</version>
        <scope>system</scope>
        <systemPath>${project.basedir}/src/main/resources/lib/DataPetriNets.jar</systemPath>
    </dependency>
    <dependency>
        <groupId>org.processmining</groupId>
        <artifactId>declareminer</artifactId>
        <version>1.0.0</version>
        <scope>system</scope>
        <systemPath>${project.basedir}/src/main/resources/lib/DeclareMiner.jar</systemPath>
    </dependency>
    <dependency>
        <groupId>org.processmining</groupId>
        <artifactId>petrinets</artifactId>
        <version>1.0.0</version>
        <scope>system</scope>
        <systemPath>${project.basedir}/src/main/resources/lib/PetriNets.jar</systemPath>
    </dependency>
        <dependency>
        <groupId>org.processmining</groupId>
        <artifactId>datapetrinetslgpl</artifactId>
        <version>1.0.0</version>
        <scope>system</scope>
        <systemPath>${project.basedir}/src/main/resources/lib/DataPetriNetsLGPL.jar</systemPath>
    </dependency>
        <dependency>
        <groupId>org.processmining</groupId>
        <artifactId>declareminervisualizer</artifactId>
        <version>1.0.0</version>
        <scope>system</scope>
        <systemPath>${project.basedir}/src/main/resources/lib/DeclareMinerVisualizer.jar</systemPath>
    </dependency>
        <dependency>
        <groupId>org.processmining</groupId>
        <artifactId>prom-framework</artifactId>
        <version>1.0.0</version>
        <scope>system</scope>
        <systemPath>${project.basedir}/src/main/resources/lib/ProM-Framework.jar</systemPath>
    </dependency>
        <dependency>
        <groupId>org.processmining</groupId>
        <artifactId>prom-models</artifactId>
        <version>1.0.0</version>
        <scope>system</scope>
        <systemPath>${project.basedir}/src/main/resources/lib/ProM-Models.jar</systemPath>
    </dependency>
            <dependency>
        <groupId>org.processmining</groupId>
        <artifactId>dataexpression</artifactId>
        <version>1.0.0</version>
        <scope>system</scope>
        <systemPath>${project.basedir}/src/main/resources/lib/DataExpression.jar</systemPath>
    </dependency>
  </dependencies>

  <build>
      
    <plugins>
        <plugin>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-maven-plugin</artifactId>
        <configuration>
            <includeSystemScope>true</includeSystemScope>
        </configuration>
    </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-assembly-plugin</artifactId>
        <version>3.8.1</version>
        <configuration>
          <source>17</source>
          <target>17</target>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.5.1</version>
        <configuration>
          <transformers>
            <transformer implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
              <mainClass>${main.class}</mainClass>
            </transformer>
          </transformers>
          <shadedArtifactAttached>true</shadedArtifactAttached>
          <shadedClassifierName>launcher</shadedClassifierName>
        </configuration>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-install-plugin</artifactId>
        <version>2.5.2</version>
        <executions>
          <execution>
            
            <phase>initialize</phase>
            <goals>
              <goal>install-file</goal>
            </goals>
            <configuration>
            <file>${project.basedir}/src/main/resources/lib/LTL2Automaton.jar</file>
            <groupId>org.processmining</groupId>
            <artifactId>ltl2automaton</artifactId>
            <version>1.0.0</version>
            <packaging>jar</packaging>
            <generatePom>true</generatePom>
            </configuration>
          </execution>
          <execution>
            
          <id>install-dpn</id>
            <phase>initialize</phase>
            <goals>
              <goal>install-file</goal>
            </goals>
            <configuration>
            <file>${project.basedir}/src/main/resources/lib/DataPetriNets.jar</file>
            <groupId>org.processmining</groupId>
            <artifactId>datapetrinets</artifactId>
            <version>1.0.0</version>
            <packaging>jar</packaging>
            <generatePom>true</generatePom>
            </configuration>
          </execution>
          <execution>
            
          <id>install-declmine</id>
            <phase>initialize</phase>
            <goals>
              <goal>install-file</goal>
            </goals>
            <configuration>
            <file>${project.basedir}/src/main/resources/lib/DeclareMiner.jar</file>
            <groupId>org.processmining</groupId>
            <artifactId>declareminer</artifactId>
            <version>1.0.0</version>
            <packaging>jar</packaging>
            <generatePom>true</generatePom>
            </configuration>
          </execution>
			    <execution>
			      
                    <id>install-pn</id>
            <phase>initialize</phase>
            <goals>
              <goal>install-file</goal>
            </goals>
            <configuration>
            <file>${project.basedir}/src/main/resources/lib/PetriNets.jar</file>
            <groupId>org.processmining</groupId>
            <artifactId>petrinets</artifactId>
            <version>1.0.0</version>
            <packaging>jar</packaging>
            <generatePom>true</generatePom>
            </configuration>
          </execution>
          			<execution>
          			  
                    <id>install-dpnlgpl</id>
            <phase>initialize</phase>
            <goals>
              <goal>install-file</goal>
            </goals>
            <configuration>
            <file>${project.basedir}/src/main/resources/lib/DataPetriNetsLGPL.jar</file>
            <groupId>org.processmining</groupId>
            <artifactId>datapetrinetslgpl</artifactId>
            <version>1.0.0</version>
            <packaging>jar</packaging>
            <generatePom>true</generatePom>
            </configuration>
          </execution>
            
          			<execution>
          			  
                    <id>install-dmv</id>
            <phase>initialize</phase>
            <goals>
              <goal>install-file</goal>
            </goals>
            <configuration>
            <file>${project.basedir}/src/main/resources/lib/DeclareMinerVisualizer.jar</file>
            <groupId>org.processmining</groupId>
            <artifactId>declareminervisualizer</artifactId>
            <version>1.0.0</version>
            <packaging>jar</packaging>
            <generatePom>true</generatePom>
            </configuration>
          </execution>
            
          			<execution>
                
                    <id>install-pf</id>
            <phase>initialize</phase>
            <goals>
              <goal>install-file</goal>
            </goals>
            <configuration>
            <file>${project.basedir}/src/main/resources/lib/ProM-Framework.jar</file>
            <groupId>org.processmining</groupId>
            <artifactId>prom-framework</artifactId>
            <version>1.0.0</version>
            <packaging>jar</packaging>
            <generatePom>true</generatePom>
            </configuration>
          </execution>
          			<execution>
          			  
                    <id>install-pm</id>
            <phase>initialize</phase>
            <goals>
              <goal>install-file</goal>
            </goals>
            <configuration>
            <file>${project.basedir}/src/main/resources/lib/ProM-Models.jar</file>
            <groupId>org.processmining</groupId>
            <artifactId>prom-models</artifactId>
            <version>1.0.0</version>
            <packaging>jar</packaging>
            <generatePom>true</generatePom>
            </configuration>
          </execution>
          <execution>

			<id>install-dexpresssion</id>
            <phase>initialize</phase>
            <goals>
              <goal>install-file</goal>
            </goals>
            <configuration>
            <file>${project.basedir}/src/main/resources/lib/DataExpression.jar</file>
            <groupId>org.processmining</groupId>
            <artifactId>dataexpression</artifactId>
            <version>1.0.0</version>
            <packaging>jar</packaging>
            <generatePom>true</generatePom>
            </configuration>
          </execution>
        </executions>
      </plugin>  
    </plugins>
  </build>
</project>
